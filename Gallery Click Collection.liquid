<style>
    .country-selector__overlay {
      background-color: transparent !important;
      width: 0% !important;
      height: 0% !important;
    }
 .Gallery-main-container{
   display: flex;
   flex-direction: column;
   padding: 75px 0;
  margin: 0 auto;
  width: 1140px;
 }
.Gallery-heading{
  width: 100%;
  height: 10vh;
}
  .Gallery-heading h2{
    /* font-size: {{section.settings}} */
  }
.gallery-wrap {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 70vh;
}

.item {
  flex: 1;
  height: 100%;
  background-position: center;
  background-size: cover;
  background-repeat: none;
  transition: flex 0.8s ease;
  }
  .item:hover{
    flex: 7;
  }
.item-1{
  background-image: url("{{ section.settings.Gallery-collection-Image-1 | image_url:width:'800px'  }}");
}
  .item-2{
  background-image: url('{{ section.settings.Gallery-collection-Image-2 | image_url:width:'800px'  }}');
}

  .item-3{
  background-image: url('{{ section.settings.Gallery-collection-Image-3 | image_url:width:'800px' }}');
}

  .item-4{
