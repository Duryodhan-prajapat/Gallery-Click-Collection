}

  .item-5{
  background-image: url('{{ section.settings.Gallery-collection-Image-5 | image_url:width:'800px' }}');
}
  .Gallery-heading h2{
    text-align: center;
    font-size: 30px;
  }
  .item h2{
    color: white;
    font-size: 2.5rem;
    text-align:center;
    margin-top: 25%;
  }
  .item a{
    text-decoration: none;
    font-weight: 700;
  }
  @media(min-width: 749px) and (max-width: 1400px){
    .item h2{
      margin-top: 30%;
    }
    .Gallery-heading {
      margin-bottom: 6rem;
    }
  }
  @media(max-width: 749px){
    .Gallery-main-container{
      width: 380px !important;
      padding: 40px 0;
    }
    .gallery-wrap{
      flex-direction: column;
      height: 90vh !important;
    }
  }
</style>

